{{ 'section-product-showcase.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-showcase-video.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign product = section.settings.product
  if product == null
    assign placeholder = true
  endif
-%}

<div class="product-showcase color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">

    {%- comment -%} Centered Header {%- endcomment -%}
    <div class="product-showcase__header center">
      {%- if section.settings.header_icon != blank -%}
        <div class="product-showcase__header-icon scroll-trigger animate--slide-in scroll-trigger--offscreen" data-cascade style="--animation-order: 0;">
          {{
            section.settings.header_icon
            | image_url: width: 100
            | image_tag: loading: 'lazy', class: 'product-showcase__icon-image'
          }}
        </div>
      {%- endif -%}

      <div class="scroll-trigger animate--slide-in scroll-trigger--offscreen" data-cascade style="--animation-order: 1;">
        {%- if section.settings.heading != blank -%}
          <h2 class="product-showcase__heading {{ section.settings.heading_size }}">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="product-showcase__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Full Width 4 Image Grid with Video Support {%- endcomment -%}
    <div class="product-showcase__images">
      {%- unless placeholder -%}
        {%- comment -%} Use blocks to select specific media items {%- endcomment -%}
        {%- for block in section.blocks -%}
          {%- if block.type == 'media_item' -%}
            {%- assign animation_order = forloop.index | plus: 1 -%}
            {%- assign media_index = block.settings.media_index | minus: 1 -%}
            {%- assign media = product.media[media_index] -%}

            {%- if media -%}
              {%- liquid
                assign is_video = false
                if media.media_type == 'video' or media.media_type == 'external_video'
                  assign is_video = true
                endif
              -%}

              <a
                href="{% if product %}{{ product.url }}{% else %}#{% endif %}"
                class="product-showcase__image-wrapper {% if is_video %}has-video{% else %}has-image-only{% endif %} scroll-trigger animate--slide-in scroll-trigger--offscreen"
                data-cascade
                style="--animation-order: {{ animation_order }};"
                {{ block.shopify_attributes }}
              >
                {%- if is_video -%}
                  {%- comment -%} Video media: show preview image + hidden video element {%- endcomment -%}
                  {{
                    media.preview_image
                    | image_url: width: 1000
                    | image_tag:
                      loading: 'lazy',
                      class: 'product-showcase__image product-showcase__preview-image',
                      widths: '375, 550, 750, 1000',
                      sizes: '(min-width: 990px) 25vw, (min-width: 750px) 50vw, 100vw'
                  }}

                  {%- if media.media_type == 'video' -%}
                    {%- comment -%} Use Shopify's media_tag for proper video format handling {%- endcomment -%}
                    {{ media | media_tag: class: 'product-showcase__video', autoplay: false, loop: true, muted: true, controls: false, preload: 'none' }}
                  {%- endif -%}
                {%- else -%}
                  {%- comment -%} Image media: show with fallback zoom effect {%- endcomment -%}
                  {{
                    media
                    | image_url: width: 1000
                    | image_tag:
                      loading: 'lazy',
                      class: 'product-showcase__image',
                      widths: '375, 550, 750, 1000',
                      sizes: '(min-width: 990px) 25vw, (min-width: 750px) 50vw, 100vw'
                  }}
                {%- endif -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      {%- else -%}
        {%- comment -%} Placeholder for theme editor {%- endcomment -%}
        {%- for i in (1..4) -%}
          {%- assign animation_order = i | plus: 1 -%}
          <a href="#" class="product-showcase__image-wrapper has-image-only scroll-trigger animate--slide-in scroll-trigger--offscreen" data-cascade style="--animation-order: {{ animation_order }};">
            {{ 'product-apparel-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
          </a>
        {%- endfor -%}
      {%- endunless -%}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Product Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "header_icon",
      "label": "Header Icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Essential You'll Actually Love"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Product title override",
      "info": "Leave blank to use product title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>A sleek, germ-resistant changing mat that folds like a clutch.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop the Mat"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "media_item",
      "name": "Media Item",
      "limit": 4,
      "settings": [
        {
          "type": "range",
          "id": "media_index",
          "min": 1,
          "max": 20,
          "step": 1,
          "label": "Media position",
          "info": "Select which media item from the product (1 = first image/video, 2 = second, etc.)",
          "default": 1
        }
      ]
    },
    {
      "type": "feature",
      "name": "Feature Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Showcase",
      "blocks": [
        {
          "type": "media_item",
          "settings": {
            "media_index": 1
          }
        },
        {
          "type": "media_item",
          "settings": {
            "media_index": 2
          }
        },
        {
          "type": "media_item",
          "settings": {
            "media_index": 3
          }
        },
        {
          "type": "media_item",
          "settings": {
            "media_index": 4
          }
        }
      ]
    }
  ]
}
{% endschema %}
