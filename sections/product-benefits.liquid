{{ 'section-product-benefits.css' | asset_url | stylesheet_tag }}

<div class="product-benefits color-{{ section.settings.color_scheme }} gradient">
  <div class="product-benefits__inner page-width section-{{ section.id }}-padding">

    {% if section.settings.heading != blank %}
      <div class="product-benefits__header center">
        <h2 class="product-benefits__heading {{ section.settings.heading_size }} scroll-trigger animate--slide-in" data-cascade style="--animation-order: 1;">
          {{ section.settings.heading }}
        </h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="product-benefits__grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
        {% for block in section.blocks %}
          <div class="product-benefits__item scroll-trigger animate--slide-in" data-cascade style="--animation-order: {{ forloop.index | plus: 1 }};" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <div class="product-benefits__icon">
                {{ block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy', width: block.settings.image.width, height: block.settings.image.height, alt: block.settings.image.alt | escape }}
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h3 class="product-benefits__item-heading h5">{{ block.settings.heading }}</h3>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="product-benefits__text rte">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Benefits",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Why Ruche?",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "label": "Number of columns on mobile"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon image"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Benefit heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Describe your benefit here</p>",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Benefits",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "heading": "Antibacterial",
            "text": "<p>Eliminates 99.9% of bacteria</p>"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "heading": "Vegan Leather",
            "text": "<p>Premium silicone leather</p>"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "heading": "Folds Compact",
            "text": "<p>Fits in any bag</p>"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "heading": "Easy to Clean",
            "text": "<p>Wipe clean in seconds</p>"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "heading": "Lightweight",
            "text": "<p>Under 500g</p>"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "heading": "Water-Resistant",
            "text": "<p>Spill-proof surface</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
