{%- style -%}
  #FullImage-{{ section.id }} {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .full-image-section {
    width: 100%;
  }

  .full-image-section img {
    width: 100%;
    height: auto;
    display: block;
  }

  .full-image-section .placeholder {
    background: #f0f0f0;
    min-height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
  }
{%- endstyle -%}

<div id="FullImage-{{ section.id }}" class="full-image-section">
  {%- if section.settings.image != blank -%}
    <img
      src="{{ section.settings.image | image_url: width: 1500 }}"
      srcset="{{ section.settings.image | image_url: width: 750 }} 750w,
              {{ section.settings.image | image_url: width: 1500 }} 1500w,
              {{ section.settings.image | image_url: width: 2000 }} 2000w,
              {{ section.settings.image | image_url: width: 3000 }} 3000w"
      sizes="100vw"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
    >
  {%- else -%}
    <div class="placeholder">
      <p>Select an image</p>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Full Image",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top margin",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom margin",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Full Image"
    }
  ]
}
{% endschema %}
